<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.restaurantfinder.ListItemActivity8">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#a709c6"
        app:srcCompat="@drawable/candyandgreen" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Highlights:- Vegetarian Only ,Full Bar Available, Live Sports Screening, Outdoor Seating, Kid Friendly, Rooftop, Valet Parking Available, Smoking Area. "
        android:textSize="18dp"
        android:textColor="#a709c6"/>

    <TextView
        android:id="@+id/textView31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView30"
        android:layout_marginTop="13dp"
        android:text="Cuisines:- Asian, Italian, Continental. "
        android:textSize="18dp"
        android:textColor="#a709c6"/>

    <TextView
        android:id="@+id/textView32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView31"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Address:- 4th and 5th Floor, Hub Town Sky Bay, Bhulabhai Desai Road, Breach Candy, Mumbai. "
        android:textSize="18dp"
        android:textColor="#a709c6"/>

    <TextView
        android:id="@+id/textView33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView32"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Phone Numbers:- 022 23523413, +91 8291914513, Table booking recommended."
        android:textSize="18dp"
        android:textColor="#a709c6"/>

    <Button
        android:id="@+id/button16"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:text="Call" />

    <Button
        android:id="@+id/button17"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button16"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="Get Direction"
        android:onClick="process"/>
</RelativeLayout>
