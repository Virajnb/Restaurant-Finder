<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.restaurantfinder.ListItemActivity9">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray"
        app:srcCompat="@drawable/faham" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView8"
        android:layout_marginTop="14dp"
        android:text="Highlights:- Home Delivery, Wheelchair Accessible, Smoking Area, Live Sports Screening, Wallet Accepted, Valet Parking Available. "
        android:textColor="@android:color/darker_gray"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView34"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Cuisines:- Chinese, North Indian, Mughlai. "
        android:textColor="@android:color/darker_gray"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView35"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Address:- Building No. 23, Satkar Hotel Lane, Near Zakaria Masjid, Masjid Station Road, Mohammad Ali Road, Mumbai. "
        android:textColor="@android:color/darker_gray"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/textView37"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView36"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Phone number:- 022 33951596, Table reservation required."
        android:textColor="@android:color/darker_gray"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/button18"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:text="Call" />

    <Button
        android:id="@+id/button19"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:text="Get Direction"
        android:onClick="process"/>
</RelativeLayout>
